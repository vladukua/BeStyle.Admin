<?xml version="1.0" encoding="utf-8"?>

<configuration>

  <!-- Authorization block -->
  <location path="Pages/Master">
    <system.web>
      <authorization>        
        <allow roles="Master"/>
        <deny roles="Moderator,Editor"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>

  <location path="Pages/Moderator">
    <system.web>
      <authorization>
        <allow roles="Master,Moderator"/>
        <deny roles="Editor"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>

  <location path="Pages/Editor">
    <system.web>
      <authorization>
        <allow roles="Master,Moderator,Editor"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>

  <location path="Default.aspx">
    <system.web>
      <authorization>
        <allow roles="Master,Moderator,Editor"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>


  <system.web>
    
    <globalization 
      fileEncoding="utf-8" 
      requestEncoding="utf-8" 
      responseEncoding="utf-8" 
      culture="en-US" 
      uiCulture="en-US"/>
    
    <!-- Authentication block -->
    <authentication mode="Forms">
      <forms loginUrl="~/Pages/Login.aspx" timeout="180" defaultUrl="~/Default.aspx">
      </forms>
    </authentication>

    <authorization>
      <deny users="?"/>
    </authorization>

    <compilation debug="true" 
                 targetFramework="4.5" />
    <!--<httpRuntime targetFramework="4.5" />-->
  </system.web>

  <connectionStrings>
    <!--<add name="BeStyleDB"/>-->
  </connectionStrings>

</configuration>